@import 'vars.styl'

body
	background url(assets/bg-red.png) 0 100% repeat-x base
	font-family open

.wrap
	background url(assets/top-base.png) 50% 0 no-repeat #fff
	height 400px
	margin 20px auto 0 auto
	width 1200px
	
/*-----------------------------------------------------------------------------------------------------> header*/

.logo
	position relative
	top 15px
	img
		width 160px
		height auto

.nav-bar
	background negro
	box-sizing(border-box)
	padding 10px 0
	margin-top 31px
	
	nav
		ul
			margin 0
			padding 0
			
			li
				display inline-block
				text-transform uppercase

				a
					color #fff
					padding 10px 25px
					transition(.15s)
					
					&:hover
						background-color rojo
						text-decoration none
/*-----------------------------------------------------------------------------------------------------> headpage*/
.photoback
	background url(assets/slider01.png) 0 0 no-repeat #fff	
	width 1200px	
	height 420px
.textbtn
	position relative
	top 270px
	color #fff
	.title
		text-transform uppercase
		h3
			span
				font-weight 300	
	.content
		width 500px
		font-weight 300	
	.boton
		margin-top 15px
		a
			padding 8px 10px
			background-color rojo
			font-size .8em
			&:hover
				text-decoration none
			color #fff
						
/*-----------------------------------------------------------------------------------------------------> content*/	
.wrap_white
	background-color #fff
	padding-bottom 85px
	box-shadow (0px 0px 25px 0px rgba(50, 50, 50, 0.45))
.headcont
	margin-top 84px
	text-align center
	.title
		h2
			font-weight 300
			font-size 3.2em
	.content
		
		margin 20px 120px 55px 120px

.textos
	margin 70px 0
	text-align center
	.title_red
		color rojo
		h4
			font-size 1.5em
	.sub_red
		margin 0 50px
		font-weight 300
.esquema
	margin-top 80px
	img
		margin 0 auto
/*-----------------------------------------------------------------------------------------------------> footer*/
footer
	height 180px
	background-color grisfinal
	position relative
	top 1960px
	.wrapgrey
		width 1200px
		height 84px
		background-color grisfoo
		margin 0 auto
.arrow
	color heavy
	position relative
	top 32px
.arrow2
	color heavy
	position relative
	top 32px
	text-align right
.marcas
	color heavy
	position relative
	top 30px
	text-align center
.enlaces
	margin-top 20px
	color heavy
	span
		a
			color heavy
			&:hover
				text-decoration none
.legal
	margin-top 20px
	color heavy

		
			