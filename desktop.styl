@import 'vars.styl'

body
	background url(assets/bg-red.png) 0 10% repeat-x base
	font-family open

.wrap
	background url(assets/top-base.png) 50% 0 no-repeat #fff
	height 400px
	margin 20px auto 0 auto
	width 1200px
/*-----------------------------------------------------------------------------------------------------> header*/

.logo
	position relative
	top 15px
	img
		width 160px
		height auto

.nav-bar
	background negro
	box-sizing(border-box)
	padding 10px 0
	margin-top 31px
	
	nav
		ul
			margin 0
			padding 0
			
			li
				display inline-block
				text-transform uppercase

				a
					color #fff
					padding 10px 25px
					
					&:hover
						background-color rojo
						text-decoration none
/*-----------------------------------------------------------------------------------------------------> headpage*/
.photoback
	background url(assets/slider01.png) 0 0 no-repeat #fff	
	width 1200px	
	height 420px
.textbtn
	position relative
	top 270px
	color #fff
	.title
		text-transform uppercase
		h3
			span
				font-weight 300	
	.content
		width 500px
		font-weight 300	
	.boton
		margin-top 15px
		a
			padding 8px 10px
			background-color rojo
			font-size .8em
			&:hover
				text-decoration none
			color #fff
						
/*-----------------------------------------------------------------------------------------------------> content*/	
.wrap_white
	background-color #fff
	padding-bottom 85px
.headcont
	margin-top 84px
	text-align center
	.title
		h2
			font-weight 300
			font-size 3.2em
	.content
		
		margin 20px 120px 55px 120px
.global
	text-align center
	.textos
		margin 60px 0
		.title_red
			color rojo
			h4
				font-size 1.5em
		.sub_red
			margin 0 25px
			font-weight 300

	
		
			