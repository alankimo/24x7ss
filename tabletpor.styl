@import 'vars.styl'

body
	background url(assets/bg-red.png) 0 -14% repeat-x base
	font-family open

.wrap
	background-image url(assets/top-base.png) 
	margin 5% auto 0 auto
	background-size contain
	background-repeat no-repeat
	background-color #fff
	background-position 0% 0% 
	max-width 800px
	overflow hidden
/*-----------------------------------------------------------------------------------------------------> header*/

.logo
	position relative
	top 15px
	right 20px
	img
		width 140px
		height auto

.nav-bar
	background negro
	box-sizing(border-box)
	padding 10px 0
	margin-top 31px
	
	nav
		ul
			margin 0
			padding 0
			
			li
				display inline-block
				text-transform uppercase

				a
					color #fff
					padding 10px 15px
					transition(.15s)
					
					&:hover
						background-color rojo
						text-decoration none
/*-----------------------------------------------------------------------------------------------------> headpage*/
.photoback
	background url(assets/slider01.png) 0 0 no-repeat #fff	
	width 100%	
	height 400px
.textbtn
	background-color grisfinal
	padding 1px 20px 20px 20px
	text-align center
	position relative
	top 220px
	color #000
	.title
		text-transform uppercase
		h3
			span
				font-weight 300	
	.content
		width 500px
		font-weight 300	
	.boton
		margin-top 15px
		a
			padding 8px 10px
			background-color rojo
			font-size .8em
			&:hover
				text-decoration none
			color #fff
/*-----------------------------------------------------------------------------------------------------> content*/	
.wrap_white
	background-color #fff
	box-shadow (0px 0px 25px 0px rgba(50, 50, 50, 0.45))
.headcont
	margin-top 84px
	text-align center
	.imagen
	img
		margin 0 auto
		
	.title
		h2
			font-weight 300
			font-size 3.2em
	.content
		
		margin 20px 120px 55px 120px

.imagen
	margin-top 35px
.textos
	margin 30% 0
	text-align center
.title_red
	color rojo
	h4
		font-size 1.5em
.sub_red
	margin 0 2%
	font-weight 300
		
.textos2
	margin 70px 0
	text-align center
	background-color grisfinal
	height 150px
	.title_red
		position relative
		top 20px
		
		color #000
		h4
			font-size 1.5em
	.sub_red
		margin 0 50px
		font-weight 300
		position relative
		top 30px
		font-size 1.2em
